{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ApplicationDbContextConnection": "Server=.; Database=RestaurantDb;Trusted_Connection=True;encrypt=false;MultipleActiveResultSets=True"
  },
  "UserAvatarsFolder": "images|avatars",
  "UserDefaultAvatar": "user-default-avatar.png",
  "AdminUserSeed": {
    "UserName": "Admin",
    "Password": "123456",
    "Email": "admin@test.com"
  },
  "EnableEmailConfirmation": false,
  "EmailConfirmationTokenProviderLifespan": "3.00:00:00.0000",
  "PasswordOptions": {
    "RequireDigit": false,
    "RequiredLength": 6,
    "RequireLowercase": false,
    "RequireNonAlphanumeric": false,
    "RequireUppercase": false
  },
  "CookieOptions": {
    "AccessDeniedPath": "/Error/Index/401",
    "CookieName": ".ProEShopIdentity.Sample",
    "ExpireTimeSpan": "15.00:00:00.0000",
    "LoginPath": "/Identity/RegisterLogin",
    "LogoutPath": "/Identity/RegisterLogin/LogOff",
    "SlidingExpiration": true
  },
  "LockoutOptions": {
    "LockoutOptions": {
      "AllowedForNewUsers": false,
      "DefaultLockoutTimeSpan": "0.00:05:00.0000",
      "MaxFailedAccessAttempts": 5
    }
  },
  "EmailConfigs": {
    "SiteTitle": "Restaurant",
    "Host": "smtp.gmail.com",
    "Port": 465,
    "UseSSL": true,
    "UserName": "",
    "Password": "",
    "LocalWritePath": "wwwroot/TempMail"
  }
}